void save_signal( SIGNAL * FIR_signal, char * filename)
{
	FILE * pFilt;
	int i;
	pFilt = fopen(filename,"wb");

	unsigned char dato;
	for(i=0;i<(FIR_signal->lenght);i++)
	{
		dato=(unsigned char)FIR_signal->signal[i];
		fwrite (&dato, sizeof(char), 1, pFilt);
	}
	fclose(pFilt);
}
